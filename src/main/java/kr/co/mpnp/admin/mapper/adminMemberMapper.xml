<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mpnp.admin.dao.mapper.adminMemberMapper">

<!-- 1.관리자-회원조회 -->
<select id="selectMember" parameterType="kr.co.mpnp.admin.vo.AdminMemberVO">
</select>
<!-- 2.관리자-회원상세정보 -->
<select id="selectMemberDetail" parameterType="kr.co.mpnp.admin.vo.AdminMemberVO">
</select>

<!-- 3.관리자-회원삭제 -->
<update id="updateMember" parameterType="kr.co.mpnp.admin.vo.AdminMemberVO">
update  member
set    status='탈퇴' <!-- <<테스트한거고 서비스 들어갈때는 #{}로 바꿔줘야함 -->
where  id=#{id}
</update>

<!-- 4.관리자-등급변경 -->
<update id="updateMemberGrade" parameterType="kr.co.mpnp.admin.vo.AdminMemberVO">
update member
set    gradeid=#{gradeid}
where  id=#{id}
</update>

<!-- 5.관리자-탈퇴회원 -->
<insert id="insertQuitMember" parameterType="kr.co.mpnp.admin.vo.AdminMemberVO">
insert into QUITMEMBER(ID, INPUTDATE)
values (#{ID},sysdate)
</insert>

</mapper>